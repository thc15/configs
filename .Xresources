!! Appearance
URxvt.geometry: 160x80
URxvt.termName: urxvt-unicode
URxvt.scrollBar: false
URxvt.scrollBar_right: true
URxvt.transpscrollbar: true
URxvt.scrollBar_floating: true
URxvt.borderLess: false

!! Font preferences
!!urxvt.font: xft:DejaVu Sans Mono:pixelsize=10
!!urxvt.boldFont: xft:DejaVu Sans Mono:pixelsize=10:weight=bold
URxvt.font: xft:Monospace:pixelsize=11:antialias=true:weight=normal
URxvt.letterSpace: -1
!! Larger history limit
URxvt.saveLines:         1000000
URxvt.urlLauncher:       firefox
URxvt.matcher.button:    1
URxvt.scrollstyle:       plain
URxvt.secondaryScroll:   true
URxvt.cutchars:          `'&(),;<=>?@[]{|}$`
!!URxvt.cutNewline:        false
!!URxvt.cutToBeginningOfLine: false
!!URxvt.charClass: 33:48,35:48,37:48,42:48,45-47:48,64:48,95:48,126:48
URxvt.charClass:         0-32:0,33-65535:1
URxvt.scrollTtyKeypress: false
URxvt.scrollTtyOutput:   false
URxvt.scrollWithBuffer:  false

!! Perl extensions
URxvt.perl-lib:  /usr/lib/urxvt/perl,~/.urxvt/
URxvt.perl-ext-common: default,matcher,tabbedex,selection-pastebin,clipboard,fullscreen,font-size
!! Open urls in browser with Control-Click
urxvt.urlLauncher: /usr/bin/firefox
urxvt.matcher.button: C1
!! Change font size on Control-Plus/Minus
URxvt.keysym.Control-0x2b: perl:font-size:increase
URxvt.keysym.Control-0x2d: perl:font-size:decrease

URxvt.keysym.C-equal:  perl:font-size:reset
URxvt.keysym.C-slash:  perl:font-size:show

!! Fullscreen
URxvt.keysym.F11: perl:fullscreen:switch

!! Yeah, I am one of those, who use these keys in Vim :-(
URxvt.keysym.Home:          \033[1~
URxvt.keysym.End:           \033[4~
!!URxvt.keysym.Control-Up:    \033[1;5A
!!URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

!! transparency
!! URxvt.inheritPixmap: true
!!URxvt.transparent:          true
!!URxvt.tintColor:            #FF
URxvt.shading:              85
URxvt.background:           #353535
URxvt.foreground:           gray
!!urxvt*fading:               0
!!urxvt*tintColor:            #000000
!!urxvt*inheritPixmap:        false
!!urxvt*scrollBar:            false

!! Colors
URxvt*background:         #2e3436
URxvt*foreground:         #eeeeec
URxvt*cursorColor:        #8ae234
! foreground color for underline
URxvt*colorUL:            #8ae234
! line color for underline
URxvt*underlineColor:     #92659a
! black dark/light
URxvt*color0:             #2e3436
URxvt*color8:             #6e706b
! red dark/light
URxvt*color1:             #cc0000
URxvt*color9:             #ef2929
! green dark/light
