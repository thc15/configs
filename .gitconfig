[user]
	name = Thomas Costis
	email = tcostis@kalray.eu

[init]
#      templatedir = ~/.git_template

[core]
	pager = less -r
	excludesfile = ~/.gitignore_global
	hooksPath = ~/.git_hooks/
	symlinks = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = vim
	symlinks = true
#        excludesfile = ..../.gitignore_global

[grep]
	linenumber = true

[alias]
	st = status -uno
	ci = commit
	cp = cherry-pick
	br = branch
	co = checkout
	cs = "! $HOME/utils/git-cs cs"
	lg = log -p
	lo = log --graph --decorate --pretty=oneline --abbrev-commit --all
	srebase = submodule foreach \"git rebase --autostash $sha1\"
	update = submodule update --recursive --rebase
	track = "!f() { br=`git symbolic-ref --short HEAD`; git branch --set-upstream-to=origin/$br ; }; f"
	compare = log --left-right --graph --cherry-pick --oneline HEAD..

[push]
	default = current

[branch "aci/tcostis/master"]
	remote = origin
	merge = refs/heads/aci/tcostis/master

[branch "aci/tcostis/coolidge"]
	remote = origin
	merge = refs/heads/aci/tcostis/coolidge

[diff]
	tool = vimdiff
	guitool = gvimdiff

[difftool]
	prompt = false

[status]
	showUntrackedFiles = normal

[sendemail]
	smtpServer = mail.kalray.eu
	smtpUser = tcostis@kalray.eu
	smtpEncryption = tls
	smtpsslcertpath=/etc/ssl/certs/ca-bundle.trust.crt
